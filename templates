<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rate Your Experience</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
</head>
<body>
    <div class="container">
        <h1>Rate Your Experience</h1>
        <p>Share how your different activities went!</p>

        <form action="{{ url_for('submit') }}" method="post" id="ratingForm">
            <label for="activity">Select an activity:</label>
            <select id="activity" name="activity" required>
                <option value="travel">Travel</option>
                <option value="dining">Dining</option>
                <option value="entertainment">Entertainment</option>
                <!-- Add more options as needed -->
            </select>

            <label for="response">Rate your experience on a scale from 1 to 10:</label>
            <input type="number" id="response" name="response" min="1" max="10" required>

            <label for="comment">Additional comments (optional):</label>
            <textarea id="comment" name="comment" rows="4"></textarea>

            <button type="button" onclick="submitForm()">Submit</button>
        </form>

        <div id="responsesSection" style="display:none;">
            <h2>Submitted Responses</h2>
            <ul id="responsesList"></ul>
        </div>
    </div>

    <script>
        function submitForm() {
            var activity = document.getElementById('activity').value;
            var response = document.getElementById('response').value;
            var comment = document.getElementById('comment').value;

            // Validate inputs if needed

            // Append response to the list
            var responsesList = document.getElementById('responsesList');
            var responseItem = document.createElement('li');
            responseItem.innerHTML = `<strong>${activity}</strong>: Rated ${response}/10 - ${comment || 'No comments'}`;
            responsesList.appendChild(responseItem);

            // Show the responses section
            document.getElementById('responsesSection').style.display = 'block';

            // Clear form inputs
            document.getElementById('ratingForm').reset();
        }
    </script>
</body>
</html>

